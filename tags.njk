---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - post
    - posts
    - example
    - examples
    - tagList
  addAllPagesToCollections: true
layout: layouts/home.njk
eleventyComputed:
  title: Tagged “{{ tag }}”
permalink: /tags/{{ tag }}/
---
<h1>Tagged “{{ tag }}”</h1>


{% set postslist = collections[ tag ] | filterPosts %}
{% include "postslist.njk" %}

{% set exampleslist = collections[ tag ] | filterExamples %}
{% include "exampleslist.njk" %}

<p>See <a href="{{ '/tags/' | url }}">all tags</a>.</p>
